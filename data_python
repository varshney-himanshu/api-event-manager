import pandas as pd
import matplotlib.pyplot as plt
import numpy as np
from pandas import DataFrame, Series
import pymongo
import pandas as pd
from pymongo import MongoClient

client = MongoClient()
db = client.database_name
collection = db.collection_name
data = pd.DataFrame(list(collection.find()))

edata = data['Mem1_E_ID', 'Mem1_Cou', 'Mem1_Ins', 'Mem1_Sem',  'Mem2_' ]


fig, ax = plt.subplots(1,1)
ax.hist(data['Mem1_Cou'])
ax.set_title('Course Map')
ax.set_xplot('Courses')
ax.set_yplot('Count')

fig, ax1 = plt.subplots(1,1)
ax1.hist(data['Mem1_Ins'])
ax1.set_title('Institute Map')
ax1.set_xplot('Institute')
ax.set_yplot('Count')

fig, ax2 = plt.subplots(1,1)
ax1.hist(data['Mem1_Sem'])
ax1.set_title('Semester Map')
ax1.set_xplot('Semester')
ax1.set_yplot('Count')

